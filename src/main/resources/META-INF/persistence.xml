<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="org.infinispan.persistence.jpa">
        <class>${infinispan.cache.readthrough.entityClass}</class>
        <properties>
            <property name="hibernate.connection.url" value="${spring.datasource.url}"/>
            <property name="hibernate.connection.driver_class" value="${spring.datasource.driver-class-name}"/>
            <property name="hibernate.connection.username" value="${spring.datasource.username}"/>
            <property name="hibernate.connection.password" value="${spring.datasource.password}"/>
            <property name="hibernate.dialect" value="${spring.jpa.properties.hibernate.dialect}" />
            <property name="hibernate.jdbc.batch_size" value="5000" />
            <property name="hibernate.show_sql" value="${spring.jpa.show-sql}" />
            <property name="hibernate.connection.autocommit" value="false" />
            <property name="hibernate.hbm2ddl.auto" value="${spring.jpa.hbm2ddl-auto}" />
        </properties>
    </persistence-unit>
</persistence>
